{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",           // Include solo i file nella directory src
    "module": "commonjs",
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,       // (Facoltativo) Per mappe di debug
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src/**/*"],       // Include solo i file TypeScript nella cartella src
  "exclude": [
    "node_modules",              // Esclude i moduli di Node.js
    "**/*.test.ts",              // Esclude i file di test
    "**/*.spec.ts",              // Esclude i file di test (alternativo)
    "jest.config.ts",            // Esclude configurazioni Jest
    "dist"                       // Esclude l'output della build
  ]
}
